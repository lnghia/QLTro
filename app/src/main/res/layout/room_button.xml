<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/available_slot"
            android:layout_width="47dp"
            android:layout_height="17dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/room_num"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/upper_corners"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/debt"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/cell_border"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textColor="#000"
            android:textSize="22sp"
            app:drawableLeftCompat="@drawable/price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/room_num"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/taken_spots"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/cell_border"
            android:drawableLeft="@drawable/user"
            android:drawableStart="@drawable/user"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textColor="#000"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/room_num"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/area"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/left_bottom_corner"
            android:drawableLeft="@drawable/area"
            android:drawableStart="@drawable/area"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textColor="#000"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/debt"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/vehicle_num"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/right_bottom_corner"
            android:drawableLeft="@drawable/motorcycle"
            android:drawableStart="@drawable/motorcycle"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textColor="#000"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taken_spots"
            tools:ignore="RtlSymmetry" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>