<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/facility_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên:"
        android:textSize="40sp"
        android:textColor="@color/normalText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/facility_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá:"
        android:textSize="40sp"
        android:textColor="@color/normalText"
        app:layout_constraintTop_toBottomOf="@+id/facility_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/facility_name_displayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textSize="40sp"
        android:textColor="@color/normalText"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@+id/facility_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/facility_price_displayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textSize="40sp"
        android:textColor="@color/normalText"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@+id/facility_price"
        app:layout_constraintTop_toBottomOf="@+id/facility_name_displayer"/>

</androidx.constraintlayout.widget.ConstraintLayout>